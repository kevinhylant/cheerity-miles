{
  "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "jsx": "react",
      "outDir": "build",
      "rootDir": "src",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true,
      "sourceMap": true
  },
  "filesGlob": [
      "typings/index.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx"
  ],
  "exclude": [
      "gulpfile.js",
      "index.android.js",
      "index.ios.js",
      "build",
      "node_modules"
  ],
  "compileOnSave": false
}